#!/bin/sh
#
# Retrieve ssh keys and trust them
#

start() {
	printf "Retrieving OpenSSH public keys for root to trust: "
	/usr/bin/holos-config -s trusted-keys
	# we should probably check the return value here later.
	echo "OK"
}

stop() {
	# We don't currently have anything we need to do here, but may later.
	printf "Stopping keys: "
	echo "OK"
}

restart() {
	stop
	start
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	restart|reload)
		restart
		;;
	*)
		echo "Usage: $0 (start|stop|restart)"
		exit 1
esac
